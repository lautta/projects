</nav>
<div class="container">
  <div class="col-lg-8 col-lg-offset-2">
    <div class="jumbotron">
      <h2> Award Search</h2>
      <form action="/search" method="post">
        <div class="form-group">
          <label for="award"> award id: </label>
          <input type="text" class="form-control" id="award" name="award">
        </div>
        <div class="form-group">
          <input type="submit" name="search" class="btn btn-default center-block" value="search" id="search">
        </div>
      </form>
    </div>
  </div>
</div>

<div class="container">
  <div class="col-lg-8 col-lg-offset-2">
    <div class="jumbotron">
      <h2>Visualized Analysis</h2>
      <div class="form-group">
        <div class="form-group">
          <label for="month"> Month: </label>
          <input type="month" class="form-control" id="month" name="month">
        </div>
        <div class="form-group">
          <input type="submit" class="btn btn-default center-block" id="monthwinner" name="monthwinner" value="View winner of employee in this month">
        </div>
      </div>
      <div class="form-group">
        <div class="form-group">
          <label for="week"> Week: </label>
          <input type="week" class="form-control" id="week" name="week">
        </div>
        <div class="form-group">
          <input type="submit" class="btn btn-default btn-inverse center-block" id="weekwinner" name="weekwinner" value="View winner of employee in this week">
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  $(document).ready(function() {
    $('#search').on('click', function() {
      var id = [];
      $.each($("input[name='award']"), function() {
        id.push($(this).val());
      });
      var url = "/viewaward/" + id[0];
      window.location.replace(url);
      return false;
    });
    $('#monthwinner').on('click', function() {
      var id = [];
      $.each($("input[name='month']"), function() {
        id.push($(this).val());
      });
      var url = "/chartmonth/" + id[0];
      window.location.replace(url);
      return false;
    });
    $('#weekwinner').on('click', function() {
      var id = [];
      $.each($("input[name='week']"), function() {
        id.push($(this).val());
      });
      var url = "/chartweek/" + id[0];
      window.location.replace(url);
      return false;
    });
  });
</script>
