<div class="jumbotron text-center">
  <h1 class="display-3" id="company-brand">Octans Award Tool</h1>
</div>

<div class="container">
  <div class="well">
    <h2 class="text-center">Password Reset</h2>
    <form class="form-horizontal" method="POST" action="/password">
      <div class="form-group">
        <label class="control-label col-sm-2" for="remail">Email</label>
        <div class="col-sm-8">
          <input type="email" id="remail" name="remail" class="form-control" placeholder="Email address" required autofocus>
        </div>
      </div>
      <div class="form-group">
        <label class="control-label col-sm-2" for="cemail">Confirm</label>
        <div class="col-sm-8">
          <input type="email" id="cemail" name="cemail" class="form-control" placeholder="Email address" required>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-8">
          <a href="/">Return to login</a>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-8">
          <button class="btn btn-default" name="submit" type="submit" value="submit">Recover!</button>
        </div>
      </div>
    </form>
  </div>
  <div id="status">
    {{#if success}}
    <p class="text-center"><span class="glyphicon glyphicon-ok"></span> {{success}}</p>
    {{/if}} {{#if error}}
    <p class="text-center"><span class="glyphicon glyphicon-remove"></span> {{error}}</p>
    {{/if}}
  </div>
</div>
